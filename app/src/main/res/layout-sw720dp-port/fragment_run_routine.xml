<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ExcerciseVisualizationCard"
        android:layout_width="600dp"
        android:layout_height="800dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_border"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/primary"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="506dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp" />


                <TextView
                    android:id="@+id/exercise_name_run_routine"
                    style="@style/customTextNoSpecificCaseLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:textSize="70sp" />

                <TextView
                    android:id="@+id/section_name_run_routine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="25sp"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/exercise_image_run_routine"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/ejercicio_demo" />

                <TextView
                    android:id="@+id/timerInRunRoutine"
                    style="@style/customTextNoSpecificCaseLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/exercise_type_run_routine"
                    style="@style/customTextNoSpecificCaseLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:gravity="center"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/exercise_desc_run_routine"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/buttonInRunRoutine"
                    style="@style/customTextNoSpecificCaseLayout"
                    android:layout_width="177dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:backgroundTint="#FF9800"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>